{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ]
    }
}